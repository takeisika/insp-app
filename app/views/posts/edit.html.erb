<% @task.errors.full_messages.each do |message| %>
    <div class="edit-error">
      <%= message %>
    </div>
  <% end %>
<p>編集してみよう!</p>
<%=form_tag("/posts/#{@task.id}/update")do%>
<textarea name="updatestatus"><%=@task.phrase%></textarea>
<textarea name="update"><%=@task.content%></textarea>
<input type="submit" value="編集完了">
<%end%>
