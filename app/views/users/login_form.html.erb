<% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>

<p>ログイン</p>
<%=form_tag("/users/login")do%>
<p>ユーザー名</p>
<input name="username" value="<%= @username %>">
<p>パスワード</p>
<input type="password" name="password" value="<%= @password %>">
<input type="submit" value="ログイン">
<%end%>